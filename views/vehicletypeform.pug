extends layout

block content
    h1 #{title}
    //p #{vehicletype}

    form(method='POST' action='')
        div.form-group
            label(for='name') Vehicle Type:
            input#name.form-control(type='text', placeholder='Sedan, SUV, Luxury, etc.' name='name' value=(undefined === vehicletype ? '' : vehicletype.name))
        div.form-group
            label(for='description') Vehicle Description:
            if vehicletype
                input#description.form-control(type='text', placeholder='Vehicle description' name='description' value=vehicletype.description)
            else
                input#description.form-control(type='text', placeholder='Vehicle description' name='description' value='')

        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
